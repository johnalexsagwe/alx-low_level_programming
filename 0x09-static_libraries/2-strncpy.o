#include "main.h"

/**
 * _strncpy - copy a string
 * @dest: destination string
 * @src: source string
 * @n: number of characters to copy
 *
 * Return: pointer to the destination string
 */
char *_strncpy(char *dest, char *src, int n)
{
    int src_index;

    // Copy up to n characters from the source string
    for (src_index = 0; src_index < n && src[src_index] != '\0'; src_index++)
    {
        dest[src_index] = src[src_index];
    }

    // If n is greater than the length of src, fill remaining characters with '\0'
    for (; src_index < n; src_index++)
    {
        dest[src_index] = '\0';
    }

    return dest;
}
